<!DOCTYPE html>
<html>
  <div id="wrapper">
    <body>
      <h3 id="main">Select a location</h3>
        <ul id="main">
        <%= form_for @location, url: admin_location_path(@location) do |f| %>
          <div>
            <%= f.label :name, "Location Name" %>
            <%= f.text_field :name %>
          </div>
          <div>
            <%= f.label :city, "City" %>
            <%= f.text_field :city %>
          </div>
          <div>
            <%= f.label :state, "State" %>
            <%= f.text_field :state %>
          </div>
          <div>
            <%= f.label :country, "Country" %>
            <%= f.text_field :country %>
          </div>
          <div>
            <%= f.submit "Submit"%>
          </div>
        <% end %>
      </ul>

      <% if @location.errors.any? %>
        <div id="error_explanation">
        <h5> The following errors(s) occurred: </h5>
        <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
        </div>
      <% end %>
    </body>
  </div>
</html>

